    <section class="ftco-section bg-light">
    	<div class="container">
			
    		<div class="row">
				<div class="d-flex  justify-content-center mb-4 col-12">
					<form  class="col-12 col-md-6">
					  <input  type="text" class="col-8 m-2 py-2" name="search" placeholder="Search...">
					  <input type="submit" class="col-auto btn btn-success p-2" value="Search">
					</form>
					
					
				  
					   
				  </div>
				
    			<div class="col-md-8 col-lg-10 order-md-last mx-auto">
    				<div class="row">
						<%products.forEach(function(products){%>
						
		    			<div class="col-sm-6 col-md-6 col-lg-4 ">
		    				<div class="product">
		    					<a href="/productview/<%=products._id%>" class="img-prod"><img class="img-fluid" src="/<%=products.image[0]%>" alt="Colorlib Template">	
		    					</a>
		    					<div class="text py-3 px-3">
		    						<h3><a href="/productview/<%products._id%>"><%=products.product_name%></a></h3>
		    						<div class="d-flex">
								<div class="pricing">										
									<%if(products.price == products.offerprice ){%>
										<p class="price"><span class="price-sale">Rs<%=products.price  %></span></p>
									<%}else{%>	
										<div class="d-flex">
										<p class="price span px-2"><span class="price-sale"><del>Rs <%=products.price  %></del> </span></p>
		    						<p class="price span"><span class="price-sale">Rs<%=products.offerprice  %></span></p>
								</div>					
									<%}%>
		    					</div>
			    					</div>
			    					<p class="bottom-area d-flex px-lg-3">
		    							<a href="/add-to-cart/<%=products._id%>" class="add-to-cart text-center py-lg-2 mr-lg-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
		    							<a href="/add-to-wishlist/<%=products._id%>" class="buy-now text-center py-2">add to wishlist<span></span></a>
		    						</p>
		    					</div>
		    				</div>
		    			</div>
						<%})%>
		    			
		    		</div>
		    		
		    	</div>
