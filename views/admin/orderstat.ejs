                <tr>
                    <th>Date</th>
                    <th>total</th>
                    <th>Gst</th>
                    <th>gained amount</th>
                    
                </tr>
            </thead>
            <tbody>
        
                <%sales.forEach(function(sales){%>
                <tr>
                    <%if(sales.date){%>
                    <td><%=sales.date%></td>
                    <%}else if(sales.month){%>
                    <td><%=sales.month%></td>
                     <%}else{%>
                        <td><%=sales._id%></td>
                        <%}%>
                    <td><%=sales.total%></td>
                    <td><%=(18/100 * sales.total).toFixed(1)%></td>
                    <td><%=sales.total -(18/100 * sales.total).toFixed(1) %></td>
                </tr>
                <%})%>
                
                
            </tbody>
