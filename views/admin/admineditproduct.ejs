<h1 class="text-center">Edit product</h1>
    <div class="container">
        
      <form action="/admin/editproduct/<%= productdetails._id%>" method="post" >
          <div class="row">
            <div class="col-md-6 mt-3">
              <label for="productname" >Product
                  Name
              </label>
              <input value="<%= productdetails.product_name%>" name="productname" id="productname"  type="text"  class="form-control ">
            </div>
            <div class="col-md-6 mt-3">
              <label for="description" >Description</label>
              
              <textarea maxlength="60" class="form-control "  rows="2" name="description"><%=productdetails.desc%></textarea>
            </div>
            <div class=" mt-5 col-md-4">
              <label for="category" class="mr-2">Category</label>
              
                <select class="custom-select " name="category"   id="category">
                    <option value="<%=productdetails.category%>"  selected><%=productdetails.category%> </option>
                
                      <%categorys.forEach(function(categorys){%>
                    <option value="<%=categorys.categoryname%>"><%=categorys.categoryname%></option>
                 
                    <%})%>
                </select>
            </div>
              
              <div class="mt-5 col-md-4">
                <label for="subcategory" class=" col-form-label">Sub Category</label>
                <select class="custom-select"   name="subcategory" id="subcategory">
                    <option value="<%=productdetails.subcategory%>"  selected><%=productdetails.subcategory%></option>
                    <option value="Levis">Levis</option>
                    <option value="allen solley">allen solley</option>
                    
                </select>
                  </div>


                  <div class="mt-5 col-md-4">
                    <label for="size" class="col-form-label">size</label>
                    <select class="custom-select" name="size" id="size">
                        <option value="<%=productdetails.size%>"  selected><%=productdetails.size%> </option>
                        <option value="sm">sm</option>
                        <option value="md">md</option>
                        <option value="xl">xl</option>
                    </select>
                      </div>



                      <div class="mt-5 col-md-4">
                          <label for="price" class="">
                              Price
                          </label>
                          <input id="price" name="price" value="<%=productdetails.price%>" type="number"class="form-control ">
                          </div>
                          <div class="mt-5 col-md-4">
                              <label for="stock" class="">Units In
                                  Stock
                              </label>
                              <input  id="stock" name="stock" value="<%=productdetails.stock%>" type="number" class="form-control ">
                              </div>
                              <div class="mt-5 col-md-4">
                              
                                  <label for="productimage" class="">
                                    Image1
                                  </label>
                                  <input id="productimage" name="image1" type="file" accept="image/*"  class="form-control ">
                               <img src="/<%=productdetails.image[0]%>" class="pt-4"  width="100px" alt="product image1">
                                  </div>
                                  
                                  <div class="mt-5 col-md-4">
                                  
                                      <label for="productimage" class="">
                                        Image2
                                      </label>
                                      <input id="productimage" name="image2" type="file" accept="image/*"  class="form-control ">
                                        <img src="/<%=productdetails.image[1]%>"class="pt-4"  width="100px" alt="product image1">
                                      </div>
                                      <div class="mt-5 col-md-4">
                                        
                                          <label for="productimage" class="">
                                            Image3
                                          </label>
                                          <input id="productimage" name="image3"  type="file" accept="image/*"  class="form-control ">
                                          <img src="/<%=productdetails.image[2]%>" class="pt-4" width="100px" alt="product image1">
                                          </div>
                                          <div class="mt-5 col-md-5">
                                              <div class="">
                                                  <button type="submit" class="btn btn-primary ">Add
                                                  </button>
                                              </div>
                                              </div>
          </div>
        </form>
        
