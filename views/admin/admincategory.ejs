<script>
  
  
  function  confirmation(id){
    swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this imaginary file!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    swal("Poof! Your  file has been deleted!", {
      icon: "success",
    }).then(()=>{
       location.href = `/admin/category/${id}`;
    })
  
    
   
  } else {
    swal("Your file is safe!");
  }
});
		}

  
             
                 </script>
       

