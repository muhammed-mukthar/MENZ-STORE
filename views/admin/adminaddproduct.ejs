    <h1 class="text-center"> Add Product</h1>

    <div class="container">
        
        <form action="/admin/addproduct" method="post" enctype="multipart/form-data" >
            <div class="row">
              <div class="col-md-6 mt-3">
                <label for="productname" >Product
                    Name
                </label>


                <input id="productname" name="productname" type="text"  class="form-control ">
              </div>
              <div class="col-md-6 mt-3">
                <label for="description" >Description</label>
                
                <textarea maxlength="60" class="form-control "  rows="2" name="description"></textarea>
              </div>
              <div class=" mt-5 col-md-4">
                <label for="category" class="mr-2">Category</label>
                <select class="" name="category" id="category">
                    <option selected>Select one</option>
                    <% category.forEach(function(category){%>
                    <option value=<%=category.categoryname%>><%=category.categoryname%></option>
                   
                    <%})%>
                </select>
                </div>
                <div class="mt-5 col-md-4">
                    <label for="subcategory" class="mr-2">Sub Category</label>
                    <select class="" name="subcategory" id="subcategory">
                        <option selected>Select one</option>
                        <option value="Levis">Levis</option>
                        <option value="allen solley">allen solley</option>
                        
                    </select>
                    </div>
                    <div class="mt-5 col-md-4">
                        <label for="size" class="">size</label>
                        <select class="" name="size" id="size">
                          <option selected>Select one</option>
                          <option value="sm">sm</option>
                          <option value="md">md</option>
                          <option value="lg">lg</option>
                          <option value="xl">xl</option>
                        </select>
                        </div>
                        <div class="mt-5 col-md-4">
                            <label for="price" class="">
                                Price
                            </label>
                            <input id="price" name="price"  type="number" class="form-control ">
                            </div>
                            <div class="mt-5 col-md-4">
                                <label for="stock" class="">Units In
                                    Stock
                                </label>
                                <input id="stock" name="stock"  type="number" class="form-control ">
                                </div>
                                <div class="mt-5 col-md-4">
                                    <label for="productimage" class="">
                                      Image
                                    </label>
                                    <input id="productimage1" name="image1" accept="image/*" type="file" class="form-control ">
                                    
                                    </div>
                                    <div class="mt-5 col-md-4">
                                        <label for="productimage" class="">
                                          Image
                                        </label>
                                        <input id="productimage2" name="image2" accept="image/*"  type="file" class="form-control ">
                                        </div>
                                        <div class="mt-5 col-md-4">
                                            <label for="productimage" class="">
                                              Image
                                            </label>
                                            <input id="productimage3" accept="image/*" name="image3" type="file" class="form-control ">
                                            </div>
                                            <div class="mt-5 col-md-5">
                                                <div class="">
                                                    <button type="submit" class="btn btn-primary ">Add
                                                    </button>
                                                </div>
                                                </div>
            </div>
          </form>
          
        </div>

        


    
