    <section>
      <div class="container mt-3">
        <button  class="my-3" id="buttonstyle" ><a href="/admin/addproduct">Add Product</a></button>
          <table id="example" class="display responsive nowrap" style="width:100%">
            <thead class="theadclass">
              <%if(message){%>
                <%=message.message%>
                <%}%>
              <tr>
                 
                    <th scope="col">Product name</th>
                    <th scope="col">description</th>
                    <th scope="col">category</th>

                    <th scope="col">size</th>
                    <th scope="col">stock</th>
                    <th scope="col">price</th>
                    <th scope="col">image</th>
                    <th scope="col">action</th>
                  
                  </tr>
                </thead>
                <tbody>
                  <% for ( let i=0; i < productdetails.length; i++){ %>
                  <tr>
                   
                    <td><%=productdetails[i].product_name%></td>
                    <td><%=productdetails[i].desc%></td>
                    
                    
                     
                      <td><%=productdetails[i].category%></td>
                    
                        
                    
                      <td><%=productdetails[i].size%></td>
                      <td><%=productdetails[i].stock%></td>
                      <td><%=productdetails[i].price%></td>
                      <td><img src="/<%=productdetails[i].image[0]%>"width="50" class="img-thumbnail" alt="product image"></td>
                      <td> 
                        <a href="/admin/editproduct/<%=productdetails[i]._id%>"  class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                        <a href="/admin/deleteproduct/<%=productdetails[i]._id%>" onclick="return confirm('do you want to delete <%=productdetails[i].product_name%>')" class="text-success"><i style="color: red;" class="fas fa-trash fa-lg mx-1"></i ></a>
                      </td>
                    
                  </tr>
              <%}%>
                </tbody>
                
     
        </table>
        
      </div>

</section>

 



